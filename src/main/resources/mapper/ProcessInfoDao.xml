<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.business.business.dao.ProcessInfoDao">
    <select id="selectProcess" parameterType="String" resultType="com.business.business.entity.ProcessInfo">
        select * from pd_processinfo where  platform = #{platform}
    </select>

    <select id="getProcessByName" parameterType="String" resultType="com.business.business.entity.ProcessInfo">
        select * from pd_processinfo where  platform= #{0} and processType = #{1} order by status limit 1
    </select>

    <select id="getProcessList" parameterType="String" resultType="com.business.business.entity.ProcessInfo">
        select * from pd_processinfo where  platform= #{0} and processType = #{1} order by createTime
    </select>
</mapper>
